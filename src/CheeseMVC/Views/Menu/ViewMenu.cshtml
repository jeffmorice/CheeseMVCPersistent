@model CheeseMVC.ViewModels.ViewMenuViewModel
@using CheeseMVC.Models

@{
    ViewData["Title"] = Model.Menu.Name;
}

<h2>@Model.Menu.Name</h2>

@if (Model.Items.Count == 0)
{
    <p>No items yet.</p>
}
else
{
    <ul>
    @foreach(CheeseMenu item in Model.Items)
    {
        <li>@item.Cheese.Name</li>
    }
    </ul>
}



<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id=@Model.Menu.ID>Add Item</a></p>


